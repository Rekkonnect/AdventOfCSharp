<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>

    <Version>1.4.1</Version>

    <PackageTags>advent-of-code, aoc, testing, xunit</PackageTags>
    <Description>Testing components for the Advent of C# framework for xUnit projects.</Description>
    <Copyright>Â© 2022, Alex Kalfakakos</Copyright>
    <RepositoryUrl>https://github.com/Rekkonnect/AdventOfCSharp</RepositoryUrl>
    <Authors>Alex Kalfakakos</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <Product>AdventOfCSharp.Testing.XUnit</Product>
    <PackageId>AdventOfCSharp.Testing.XUnit</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AdventOfCSharp.Testing\AdventOfCSharp.Testing.csproj" />
  </ItemGroup>

</Project>
